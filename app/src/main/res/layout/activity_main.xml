<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/search"
            app:layout_constraintLeft_toRightOf="@id/btn_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stories"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dots"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add"
            app:layout_constraintRight_toLeftOf="@+id/btn_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/text_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Friends"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <HorizontalScrollView
        android:id="@+id/horizontal_friends"
        app:layout_constraintTop_toBottomOf="@id/text_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_friends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="27dp"
                android:layout_marginStart="10dp">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/frame_stories11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/stories"/>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/text_subscriptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="168dp"
        android:text="Subscriptions"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_subscriptions">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignBounds"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true"
                android:columnOrderPreserved="false">
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black"/>
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/black"/>
            </GridLayout>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation"
        android:background="@color/black"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>